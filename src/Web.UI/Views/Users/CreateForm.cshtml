@model XPShare.Domain.Users.User
@{
    ViewData["Title"] = "Create New User";
}

<h2>Create New User</h2>
<form asp-controller="Users" asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="GravatarEmail" class="col-md-2 control-label">Email</label>
        <div class="col-md-10">
            <input asp-for="GravatarEmail" class="form-control" />
            <span asp-validation-for="GravatarEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>


