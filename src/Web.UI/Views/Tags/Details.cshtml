@model XPShare.Domain.Tags.Tag
@{
    var id = Model?.Id.ToString() ?? "Not Found";
    ViewData["Title"] = $"Tags - {id}";
}

<h2>Details</h2>

@if (Model != null)
{
    <div>
        @Model.Name  <br />
    </div>
    <a asp-controller="Tags" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete the tag?');">Delete</a>
}
else
{
    <div>Experience Not Found</div>

}


<a asp-controller="Experiences" asp-action="Index">Back</a>