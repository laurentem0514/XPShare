@model XPShare.Domain.Experiences.Experience
@{
    var id = Model?.Id.ToString() ?? "Not Found";
    ViewData["Title"] = $"Experiences - {id}";
}

<h2>Details</h2>

@if (Model != null)
{
    <div>
        @Model.Description  <br />
    </div>
    <a asp-controller="Experiences" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete the experience?');">Delete</a>
}
else
{
    <div>Experience Not Found</div>

}


<a asp-controller="Experiences" asp-action="Index">Back</a>